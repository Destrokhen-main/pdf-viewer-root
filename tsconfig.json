{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "lib": ["es2017", "DOM"],
        "strict": true,
        "esModuleInterop": false,
        "baseUrl": ".",
        "outDir": "dist",
        "rootDir": "src",
        "allowJs": true,
        "noImplicitAny": true,
        "declaration": true
    },
    "include": ["./src/**/*.ts"]
}
